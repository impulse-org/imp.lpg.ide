   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.safari.jikespg.preferences.JikesPGTabbedPreferencesPage"
            id="org.eclipse.safari.jikespg.tabbedPreferencesPage"
            name="JikesPG Revised"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.eclipse.safari.jikespg.preferences.PreferenceInitializer"/>
   </extension>
   <extension
         point="org.eclipse.compare.structureCreators">
      <structureCreator
            class="org.eclipse.safari.jikespg.compare.JikesPGStructureNode"
            extensions="g,gi"
            id="org.eclipse.safari.jikespg.structureCreator"/>
<!--      <contentTypeBinding
            contentTypeId="org.eclipse.safari.jikespg.grammarFile"
            structureCreatorId="org.eclipse.safari.jikespg.structureCreator"/>
  -->
   </extension>
