<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         id="LPGNature"
         name="LPG Nature"
         point="org.eclipse.core.resources.natures">
      <builder id="org.eclipse.imp.lpg.runtime.LPGBuilder"/>
      <runtime>
         <run class="org.eclipse.imp.lpg.builder.LPGNature"/>
      </runtime>
   </extension>
 
   <extension
         id="LPGBuilder"
         name="LPG Grammar File Builder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run class="org.eclipse.imp.lpg.builder.LPGBuilder"/>
      </builder>
   </extension>
   <extension
         id="problem"
         name="LPG Error"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.problemmarker"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="LPG IDE"
            id="org.eclipse.imp.lpg.ide"/>
      <view
            class="org.eclipse.imp.lpg.views.LPGView"
            icon="icons/sample.gif"
            category="org.eclipse.imp.lpg"
            name="LPG Console"
            id="org.eclipse.imp.lpg.views.LPGView"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"
               id="org.eclipse.imp.lpg.views.LPGView"/>
      </perspectiveExtension>
   </extension>
   <extension
         id="org.eclipse.imp.LPG"
         name="LPG Language"
         point="org.eclipse.imp.runtime.languageDescription">
      <language
            description="LPG Grammar Specification"
            extensions="g,gi,lpg"
            icon="grammarfile.gif"
            language="LPG"
            natureID="org.eclipse.imp.lpg.runtime.LPGNature"/>
   </extension>
   <extension
         name="LPG Grammar Specification Parser"
         point="org.eclipse.imp.runtime.parser">
      <parser
            class="org.eclipse.imp.lpg.parser.ParseController"
            language="LPG"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.tokenColorer">
      <tokenColorer
            class="org.eclipse.imp.lpg.editor.TokenColorer"
            language="LPG"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.outliner">
      <outliner
            class="org.eclipse.imp.lpg.editor.Outliner"
            language="LPG"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.contentProposer">
      <proposer
            class="org.eclipse.imp.lpg.editor.ContentProposer"
            language="LPG"/>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.eclipse.imp.lpg.projectContextMenu"
            nameFilter="*"
            objectClass="org.eclipse.jdt.core.IJavaProject">
         <action
               class="org.eclipse.imp.lpg.actions.EnableBuilder"
               icon="icons/builderEnable.gif"
               id="org.eclipse.imp.lpg.enableBuilderAction"
               label="Enable &amp;LPG Builder"
               tooltip="Enable the LPG builder for this project"/>
      </objectContribution>
   </extension>
