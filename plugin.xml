         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            file-extensions="g,gi"
            id="org.eclipse.safari.jikespg.grammarFile"
            name="JikesPG Grammar File"
            priority="normal"/>
   </extension>
 -->
   <extension
         point="org.eclipse.compare.structureMergeViewers">
      <viewer
            class="org.eclipse.safari.jikespg.compare.StructureMergeViewerCreator"
            extensions="g,gi"
            id="org.jikespg.uide.viewer"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.foldingUpdater">
      <foldingUpdater
            class="org.eclipse.safari.jikespg.editor.FoldingUpdater"
            language="JikesPG"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.formatter">
      <formatter
            class="org.eclipse.safari.jikespg.editor.JikesPGFormatter"
            language="JikesPG"/>
   </extension>
   <extension
         point="org.eclipse.search.searchPages">
      <page
            canSearchEnclosingProjects="true"
            class="org.eclipse.safari.jikespg.search.JikesPGSearchPage"
            enabled="true"
            extensions="g:100"
            icon="icons/sample.gif"
            id="org.jikespg.uide.searchPage"
            label="JikesPG Search"
            showScopeSection="true"/>
   </extension>
   <extension
         point="org.eclipse.search.searchResultViewPages">
      <viewPage
            class="org.eclipse.safari.jikespg.search.JikesPGSearchResultPage"
            id="org.jikespg.uide.searchResultViewPage"
            searchResultClass="org.eclipse.safari.jikespg.search.JikesPGSearchResult"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.labelProvider">
         <labelProvider
               class="org.eclipse.safari.jikespg.editor.JikesPGLabelProvider"
               language="jikespg"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.outlineContentProvider">
         <outlineContentProvider
         		class="org.eclipse.safari.jikespg.editor.JikesPGContentProvider"
         		language="jikespg"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.refactoringContributions">
         <refactoringContributor
				language="jikespg"
				class="org.eclipse.safari.jikespg.refactoring.JikesPGRefactoringContributor"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.referenceResolvers">
         <referenceResolver
                language="jikespg"
                class="org.eclipse.safari.jikespg.editor.JikesPGReferenceResolver"/>
   </extension>
   <extension
         point="com.ibm.watson.safari.xform.astAdapter">
         <astAdapter
            language="JikesPG"
            class="org.eclipse.safari.jikespg.refactoring.JikesPGASTAdapter"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.editorActionContributions">
      <editorActionContributor
            class="org.eclipse.safari.jikespg.actions.LanguageActionContributor"
            language="jikespg"/>
   </extension>
</plugin>
