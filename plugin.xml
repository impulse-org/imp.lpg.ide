   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.imp.preferences.LPGPreferencePage"
            id="org.eclipse.imp.preferencePage"
            name="LPG"/>
   </extension>
-->	
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.imp.lpg.preferences.LPGTabbedPreferencesPage"
            id="org.eclipse.imp.lpg.tabbedPreferencesPage"
            name="LPG"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.eclipse.imp.lpg.preferences.PreferenceInitializer"/>
   </extension>
   <extension
         point="org.eclipse.compare.structureCreators">
      <structureCreator
            class="org.eclipse.imp.lpg.compare.LPGStructureNode"
            extensions="g,gi"
            id="org.eclipse.imp.lpg.structureCreator"/>
<!--      <contentTypeBinding
            contentTypeId="org.eclipse.imp.lpg.grammarFile"
            structureCreatorId="org.eclipse.imp.lpg.structureCreator"/>
  -->
   </extension>
<!--   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            file-extensions="g,gi"
            id="org.eclipse.imp.lpg.grammarFile"
            name="LPG Grammar File"
            priority="normal"/>
   </extension>
 -->
   <extension
         point="org.eclipse.compare.structureMergeViewers">
      <viewer
            class="org.eclipse.imp.lpg.compare.StructureMergeViewerCreator"
            extensions="g,gi"
            id="org.eclipse.imp.viewer"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.foldingUpdater">
      <foldingUpdater
            class="org.eclipse.imp.lpg.editor.FoldingUpdater"
            language="LPG"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.formatter">
      <formatter
            class="org.eclipse.imp.lpg.editor.LPGFormatter"
            language="LPG"/>
   </extension>
   <extension
         point="org.eclipse.search.searchPages">
      <page
            canSearchEnclosingProjects="true"
            class="org.eclipse.imp.lpg.search.LPGSearchPage"
            enabled="true"
            extensions="g:100"
            icon="icons/sample.gif"
            id="org.eclipse.imp.lpg.searchPage"
            label="LPG Search"
            showScopeSection="true"/>
   </extension>
   <extension
         point="org.eclipse.search.searchResultViewPages">
      <viewPage
            class="org.eclipse.imp.lpg.search.LPGSearchResultPage"
            id="org.eclipse.imp.searchResultViewPage"
            searchResultClass="org.eclipse.imp.lpg.search.LPGSearchResult"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.labelProvider">
         <labelProvider
               class="org.eclipse.imp.lpg.editor.LPGLabelProvider"
               language="LPG"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.outlineContentProvider">
         <outlineContentProvider
         		class="org.eclipse.imp.lpg.editor.LPGContentProvider"
         		language="LPG"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.refactoringContributions">
         <refactoringContributor
				language="LPG"
				class="org.eclipse.imp.lpg.refactoring.LPGRefactoringContributor"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.referenceResolvers">
         <referenceResolver
                language="LPG"
                class="org.eclipse.imp.lpg.editor.LPGReferenceResolver"/>
   </extension>
   <extension
         point="org.eclipse.imp.xform.astAdapter">
         <astAdapter
            language="LPG"
            class="org.eclipse.imp.lpg.refactoring.LPGASTAdapter"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.editorActionContributions">
      <editorActionContributor
            class="org.eclipse.imp.lpg.actions.LanguageActionContributor"
            language="LPG"/>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.documentationProvider">
         <docProvider
             language="LPG"
             class="org.eclipse.imp.lpg.editor.DocumentationProvider"/>
   </extension>
</plugin>
