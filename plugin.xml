<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         id="jikesPGNature"
         name="JikesPG Nature"
         point="org.eclipse.core.resources.natures">
      <builder id="org.eclipse.safari.jikespg.runtime.jikesPGBuilder"/>
      <runtime>
         <run class="org.eclipse.safari.jikespg.builder.JikesPGNature"/>
      </runtime>
   </extension>
 
   <extension
         id="jikesPGBuilder"
         name="JikesPG Grammar File Builder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run class="org.eclipse.safari.jikespg.builder.JikesPGBuilder"/>
      </builder>
   </extension>
   <extension
         id="problem"
         name="JikesPG Error"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.problemmarker"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="JikesPG UIDE"
            id="org.jikespg.uide"/>
      <view
            class="org.eclipse.safari.jikespg.views.JikesPGView"
            icon="icons/sample.gif"
            category="org.jikespg.uide"
            name="JikesPG Console"
            id="org.jikespg.uide.views.JikesPGView"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"
               id="org.eclipse.safari.jikespg.views.JikesPGView"/>
      </perspectiveExtension>
   </extension>
   <extension
         id="org.jikespg.uide.jikesPG"
         name="JikesPG Language"
         point="org.eclipse.uide.runtime.languageDescription">
      <language
            description="JikesPG Grammar Specification"
            extensions="g,gi,lpg"
            icon="grammarfile.gif"
            language="JikesPG"/>
   </extension>
   <extension
         name="JikesPG Grammar Specification Parser"
         point="org.eclipse.uide.runtime.parser">
      <parser
            class="org.eclipse.safari.jikespg.parser.ParseController"
            language="JikesPG"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.tokenColorer">
      <tokenColorer
            class="org.eclipse.safari.jikespg.editor.TokenColorer"
            language="JikesPG"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.outliner">
      <outliner
            class="org.eclipse.safari.jikespg.editor.Outliner"
            language="JikesPG"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.contentProposer">
      <proposer
            class="org.eclipse.safari.jikespg.editor.ContentProposer"
            language="JikesPG"/>
   </extension>
   <extension
         point="org.eclipse.uide.runtime.hoverHelper">
      <hoverhelper
            class="org.eclipse.safari.jikespg.editor.HoverHelper"
            language="JikesPG"/>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.eclipse.safari.jikespg.projectContextMenu"
            nameFilter="*"
            objectClass="org.eclipse.jdt.core.IJavaProject">
         <action
               class="org.eclipse.safari.jikespg.actions.EnableBuilder"
               icon="icons/builderEnable.gif"
               id="org.eclipse.safari.jikespg.enableBuilderAction"
               label="Enable &amp;JikesPG Builder"
               tooltip="Enable the JikesPG builder for this project"/>
      </objectContribution>
   </extension>
